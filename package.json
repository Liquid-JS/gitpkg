{
  "name": "gitpkg",
  "version": "1.0.0-beta.2",
  "description": "Publish packages as git tags",
  "main": "build/index.js",
  "scripts": {
    "build": "babel src -d build -s",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "clean": "rimraf ./build",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "prepack": "yarn run clean --silent && yarn run build --silent",
    "test-ci-partial": "yarn run test-coverage --silent",
    "test-ci": "yarn run lint --silent && yarn run test-ci-partial --silent && codecov",
    "test-coverage": "yarn run jest --silent -- --coverage",
    "test": "jest"
  },
  "author": {
    "name": "Ramiro Silveyra d'Avila",
    "twitter": "ramasilveyra"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.5.0"
  },
  "bin": "./bin/gitpkg.js",
  "files": [
    "bin",
    "build"
  ],
  "repository": "git@github.com:ramasilveyra/gitpkg.git",
  "keywords": [
    "git",
    "packages",
    "registry",
    "modules"
  ],
  "dependencies": {
    "chalk": "^2.4.1",
    "del": "^3.0.0",
    "end-of-stream": "^1.4.1",
    "execa": "^1.0.0",
    "git-remote-origin-url": "^2.0.0",
    "make-dir": "^1.3.0",
    "ora": "^3.0.0",
    "semver": "^5.6.0",
    "tar-fs": "^1.16.3",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.1.0",
    "conventional-changelog-cli": "^2.0.5",
    "del-cli": "^1.1.0",
    "eslint": "^5.7.0",
    "eslint-config-auth0-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "folder-hash": "^2.1.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2"
  },
  "gitpkg": {
    "registry": "git@github.com:ramasilveyra/public-registry.git"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/bin/**",
      "!**/coverage/**"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --print-width 100 --write",
      "git add"
    ]
  }
}
